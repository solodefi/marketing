<head>
  <meta name="title" content="All jobs of a client">
  <meta name="description" content="Shows jobs of a clients.Both Surveyors and freelance architects can use it.">
  <meta name="keywords" content="surveyour, jobs , freelance architect">
</head>
<div class="container">
  <h4>My Jobs</h4>
</div>
<div class="container custom-container">
  <% if @jobs.count > 0 %>
    <% @jobs.each do |job| %>
      <div class="custom-table-cell">
        <div class="row"> 
          <div class="col-md-9">
            <%= link_to job.title, job, {method: :get, class: "custom-table-cell-title-link"} %>
          </div>
          <div class="col-md-3"></div>
        </div>
        <div class="row">
          <div class="col-md-3">
            <span class="less-highlight">Budget : </span>
            <span>Â£<%= job.price %></span>
          </div>
          <div class="col-md-6">
            <span class="glyphicon glyphicon-calendar"></span>
            <span class="less-highlight">Time : </span>
            <span><%= job.time_duration %></span>
          </div>
          <div class="col-md-3">
            <span class="glyphicon glyphicon-time"></span>
            <span class="less-highlight">Posted</span>
            <span><%= time_ago_in_words(job.created_at) %></span>
            <span class="less-highlight">ago</span>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <p class="custom-table-cell-description"><%= job.description %></p>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <span class="less-highlight">Category : </span>
            <span><%= job.str_categories %></span>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <span class="glyphicon glyphicon-record"></span>
            <span class="less-highlight">Proposals : </span>
            <span><%= job.proposals.count %></span>
          </div> 
          <div class="col-md-6">
            <span class="glyphicon glyphicon-map-marker"></span>
            <span class="less-highlight">Location : </span>
            <span><%= job.postcode %></span>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="no-content-fill">
      <h3> No job ... </h3>
    </div>
  <% end %>
  
</div>
